{
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@dotenvx/dotenvx": "^1.48.4",
    "chrome-webstore-upload": "^3.1.4",
    "commander": "^13.1.0",
    "glob": "^11.0.3",
    "inquirer": "^12.5.2",
    "mime-types": "^3.0.1",
    "semver": "^7.7.2",
    "web-ext": "^8.5.0"
  },
  "devDependencies": {
    "@complexity/cli-logger": "workspace:*",
    "@complexity/eslint-config": "workspace:*",
    "@complexity/typescript-config": "workspace:*",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.17.30",
    "eslint": "catalog:lint",
    "prettier": "^3.6.2",
    "typescript": "catalog:types",
    "typescript-eslint": "catalog:lint"
  },
  "name": "pplx-ext-release-cli",
  "scripts": {
    "create-release-note": "bun ./src/web-stores/create-release-note.ts",
    "firefox:publish": "dotenvx run -f .env.firefox --quiet -- bun ./src/web-stores/firefox-publish.ts",
    "chrome:upload": "dotenvx run -f .env.chrome --quiet -- bun ./src/web-stores/chrome-upload.ts",
    "r2:changelog:push": "dotenvx run -f ./src/r2/.env --quiet -- bun ./src/r2/changelogs-push.ts",
    "r2:rr:gen": "dotenvx run -f ./src/r2/.env --quiet -- bun ./src/r2/remote-resources/static.ts",
    "r2:versioned-rr:gen": "dotenvx run -f ./src/r2/.env --quiet -- bun ./src/r2/remote-resources/versioned.ts",
    "r2:cache-buster:bump": "dotenvx run -f ./src/r2/.env --quiet -- bun ./src/r2/cache-buster-bump.ts",
    "r2:pull": "dotenvx run -f ./src/r2/.env --quiet -- bun ./src/r2/pull.ts",
    "r2:push": "dotenvx run -f ./src/r2/.env --quiet -- bun ./src/r2/push.ts",
    "r2:refresh": "pnpm r2:versioned-rr:gen && pnpm r2:rr:gen && pnpm r2:cache-buster:bump && pnpm r2:push"
  },
  "type": "module"
}
